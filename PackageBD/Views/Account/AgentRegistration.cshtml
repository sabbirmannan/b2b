@model PackageBD.Models.RegisterViewModel_Agent
@{
    ViewBag.Title = "Agent Registation";
}

<style>
    .supdetails{
        margin:0px;
    }
    .regtitle{
        margin-bottom:10px;
        text-align:center;
    }
    #agentregform .glyphicon{
        color:#213687
    }
</style>


<div id="agentregform" class="container" style="background-color:#f8f6c8; padding:20px;">
    @using (Html.BeginForm("AgentRegistration", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

    <div class="row">
        <h2 class="text-center"><b>Agent Registration Form</b></h2>
        <hr />
        <div class="col-sm-12 col-md-6 col-lg-6">
            <div class="container-fluid supdetails">
                <div class="regtitle">
                    <h2 class="btn btn-info"><span>Agent Details</span></h2>
                </div>
                @*<hr />*@

                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.EditorFor(model => model.AgencyName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Agency Name" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.AgencyName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-map-marker"></i></span>
                        @Html.EditorFor(model => model.AgencyEmail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Agency Email" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.AgencyEmail, "", new { @class = "text-danger" })
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @placeholder = "First Name" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Last Name" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-cog"></i></span>
                        @Html.EditorFor(model => model.Designation, new { htmlAttributes = new { @class = "form-control", @placeholder = "Designation" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.Designation, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-arrow-down"></i></span>
                        @Html.EnumDropDownListFor(model => model.NatureOfBusiness, "-- Nature Of Business --", htmlAttributes: new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.NatureOfBusiness, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-arrow-down"></i></span>
                        @Html.EnumDropDownListFor(model => model.BusinessType, "-- Business Type --", htmlAttributes: new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.BusinessType, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-arrow-down"></i></span>
                        @Html.EnumDropDownListFor(model => model.HearBy, "-- You heared about packagebd.com by --", htmlAttributes: new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(model => model.HearBy, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-arrow-down"></i></span>
