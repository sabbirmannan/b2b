                        @Html.EditorFor(model => model.AccountsNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "Accounts Number" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.AccountsNumber, "", new { @class = "text-danger" })
                </div>

                <!--reservation details-->
                <div class="text-center">
                    <h2 class="label-info">Reservation</h2>
                </div>
                <br />
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.EditorFor(model => model.ReservationName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Reservation Name" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.ReservationName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.EditorFor(model => model.ReservationEmail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Reservation Email" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.ReservationEmail, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.EditorFor(model => model.ReservationNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "Reservation Number" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.ReservationNumber, "", new { @class = "text-danger" })
                </div>
                <!--reservation details-->

                <!--management details-->
                <div class="text-center">
                    <h2 class="label-info">Management</h2>
                </div>
                <br />
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.EditorFor(model => model.ManagementName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Management Name" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.ManagementName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.EditorFor(model => model.ManagementEmail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Management Email" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.ManagementEmail, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.EditorFor(model => model.ManagementNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "Management Number" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.ManagementNumber, "", new { @class = "text-danger" })
                </div>          
            </div>
                <!--contact details-->

                <!--validation summary-->
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <hr />


                <div class="btn-group col-sm-offset-2">
                    <div class="btn btn-default">
                        <input type="submit" value="Register" class="btn btn-success" />
                    </div>
                    <div class="btn btn-default">
                        <a href="@Url.Action("Index","Home",new { area=""})" class="btn btn-default"><i class="glyphicon glyphicon-log-in"></i>&nbsp; Already Member?</a>
                    </div>
                    <div class="btn btn-default">
                        <a href="@Url.Action("Index","Home",new { area=""})" class="btn btn-danger">Cancel</a>
