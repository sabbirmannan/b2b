                        @Html.EditorFor(model => model.Website, new { htmlAttributes = new { @class = "form-control", @placeholder = "Website" } })
                    </div>
                    @Html.ValidationMessageFor(model => model.Website, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-upload"></i></span>
                        @*@Html.EditorFor(model => model.LogoPath, new { htmlAttributes = new { @class = "form-control", @placeholder = "Website" } })*@
                        <input type="file" name="logo" class="form-control" />
                    </div>
                    @Html.ValidationMessageFor(model => model.Website, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-6 col-lg-6">
            <div class="container-fluid">
                <!--User access details -->
                <div class="regtitle">
                    <h2 class="btn btn-info"><span>Access Details</span></h2>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-log-in"></i></span>
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Username" } })
                    </div>
                    @*@Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })*@
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm password" })
                    </div>
                </div>
                <!--user access-->

                <!--contact details-->
                <div class="regtitle">
                    <h2 class="btn btn-info"><span>Contact Details</span></h2>
                </div>

                <div class="text-center">
                    <h2 class="label-info">Accounts</h2>
                </div>
                <br />
                <div class="form-group">
                    <div class="input-group">
