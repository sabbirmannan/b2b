@model  PackageBD.Models.TourPackageViewDetailsVM
@using System.Globalization
@{
    ViewBag.Title = "TourPackageDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
    CultureInfo bdt = new CultureInfo("bn-BD");
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<br />
<br />

<!-- banner-bottom -->
<div class="banner-bottom">
    <!-- container -->
    <div class="container-fluid">
        <div class="faqs-top-grids">
            <!--single-page-->
            <div class="single-page">
                <h2 class="text-center">@Html.DisplayFor(model => model.TourPackage.TourPackageTitle)</h2>
                <div class="col-md-8 single-gd-lt">
                    @foreach (var f in Model.TourPackage.FileDetails)
                    {
                        <div class="">
                            <img src="~/Images/packageImg/@(f.FileDetailsId+f.Extension)" width="100%;" class="">
                        </div>
                    }

                    <hr />
                    <!--tab pane-->
                    <style>
                        .ulhov li a:hover{background-color:#5ccc18}
                        .lihov a:hover{
                            color:#ffffff;
                        }
                    </style>
                    <div class="panel with-nav-tabs panel-default">
                        <div class="panel-heading">
                            <ul class="nav nav-tabs ulhov">
                                <li class="active lihov"><a href="#tab1itinerary" data-toggle="tab"><i class="glyphicon glyphicon-plane"></i> Itinerary</a></li>
                                <li class="lihov"><a href="#tab2facilities" data-toggle="tab"><i class="glyphicon glyphicon-bookmark"></i> Facilities</a></li>
                                <li class="lihov"><a href="#tab3termscons" data-toggle="tab"><i class="glyphicon glyphicon-file"></i> Tearm & Conditions</a>
                                <li class="lihov"><a href="#tab4available" data-toggle="tab"><i class="glyphicon glyphicon-check"></i> Available</a></li>
                                <li class="lihov"><a href="#tab5hotels" data-toggle="tab"><i class="glyphicon glyphicon-bed"></i> Hotels</a></li>
                            </ul>
                        </div>
                        <div class="panel-body">
                            <div class="tab-content">
                                <div class="tab-pane fade in active" id="tab1itinerary">
                                    <p class="label label-warning">Note : Click titles for details of program</p><br />
                                    
                                    <!--collapse panel-->
                                    <div class="collapse-group">
                                        @*<div class="controls">
                                            <button class="btn btn-primary open-button" type="button">
                                                Open all
                                            </button>
                                            <button class="btn btn-primary close-button" type="button">
                                                Close all
                                            </button>
                                        </div>*@

                                        <div class="panel panel-default">
                                            <div class="panel-heading" role="tab" id="headingOne">
                                                <h4 class="panel-title">
                                                    <a role="button" data-toggle="collapse" href="#highlights" aria-expanded="true" aria-controls="inExFacilities" class="trigger collapsed">
                                                        @Html.LabelFor(model => model.TourPackage.Highlights, htmlAttributes: new { @class = "" })
                                                    </a>
                                                </h4>
                                            </div>
                                            <div id="highlights" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                                                <div class="panel-body">
                                                    @Html.DisplayFor(model => model.TourPackage.Highlights)
                                                </div>
                                            </div>
                                        </div>

                                        <div class="panel panel-default">
                                            <div class="panel-heading" role="tab" id="headingOne">
                                                <h4 class="panel-title">
                                                    <a role="button" data-toggle="collapse" href="#dayOne" aria-expanded="true" aria-controls="dayOne" class="trigger collapsed">
                                                        @Html.LabelFor(model => model.TourPackage.DayOne, htmlAttributes: new { @class = "" })
                                                    </a>
                                                </h4>
                                            </div>
                                            <div id="dayOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                                                <div class="panel-body">
                                                    @Html.DisplayFor(model => model.TourPackage.DayOne)
                                                </div>
                                            </div>
                                        </div>


                                        <div class="panel panel-default">
                                            <div class="panel-heading" role="tab" id="headingTwo">
                                                <h4 class="panel-title">
                                                    <a role="button" data-toggle="collapse" href="#dayTwo" aria-expanded="true" aria-controls="dayTwo" class="trigger collapsed">
                                                        @Html.LabelFor(model => model.TourPackage.DayTwo, htmlAttributes: new { @class = "" })
                                                    </a>
                                                </h4>
                                            </div>
                                            <div id="dayTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                                                <div class="panel-body">
                                                    @Html.DisplayFor(model => model.TourPackage.DayOne)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--collapse panel-->
                                </div>

                                <div class="tab-pane fade" id="tab2facilities">
                                    <p>@Html.DisplayFor(model => model.TourPackage.InclusionExclusion)</p>
                                </div>
                                <div class="tab-pane fade" id="tab3termscons">
                                    <p>@Html.DisplayFor(model => model.TourPackage.TearmsAndConditions)</p>
                                </div>

                                <div class="tab-pane fade" id="tab4available">
                                    <p>@Html.DisplayFor(model => model.TourPackage.ValidityDate)</p>
                                </div>

                                <div class="tab-pane fade" id="tab5hotels">
                                    <p>@Html.DisplayFor(model => model.TourPackage.HotelInUse)</p>
                                </div>

                            </div>
                        </div>
                    </div>
                    <!--tab pane-->

                </div>
                <div class="col-md-4 single-gd-rt">
                    <div class="spl-btn">
                        <div class="spl-btn-bor">
                            <a href="#">
                                <span class="glyphicon glyphicon-tag" aria-hidden="true"></span>
                            </a>
                            <p>Booking</p>
                        </div>
                        <div class="sp-bor-btn text-right">
                            <h4 class="text-center text-capitalize">@Html.DisplayFor(model => model.TourPackage.TourSalesPrice)</h4>
                            <p class="best-pri">Best price</p>
                            <a class="best-btn" href="#">Book Now</a>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
            <!--//single-page-->
        </div>
        
    </div>
    <!-- //container -->
</div>
<!-- //banner-bottom -->



<style>
    a:hover, a:visited, a:link, a:active {
  text-decoration: none;
}
    .controls {
  margin-bottom: 10px;
}

.collapse-group {
  padding: 10px;
  border: 1px solid darkgrey;
  margin-bottom: 10px;
}

.panel-title .trigger:before {
  content: '\e082';
  font-family: 'Glyphicons Halflings';
  vertical-align: text-bottom;
}

.panel-title .trigger.collapsed:before {
  content: '\e081';
}
</style>


<script>
    $("#open-button").on("click", function () {
        $(this).closest('.collapse-group').find('.collapse').collapse('show');
    });

    $("#close-button").on("click", function () {
        $(this).closest('.collapse-group').find('.collapse').collapse('hide');
    });
</script>